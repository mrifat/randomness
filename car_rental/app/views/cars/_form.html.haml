= form_for @car, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :manufacturer, :class => 'control-label'
    .controls
      = f.text_field :manufacturer, :class => 'text_field'
  .control-group
    = f.label :model, :class => 'control-label'
    .controls
      = f.text_field :model, :class => 'text_field'
  .control-group
    = f.label :rent_price, :class => 'control-label'
    .controls
      = f.text_field :rent_price, :class => 'text_field'
  .control-group
    = f.label :state, :class => 'control-label'
    .controls
      = f.text_field :state, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), cars_path, :class => 'btn'
