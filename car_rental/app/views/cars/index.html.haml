- model_class = Car
.page-header
  %h1=t '.title', :default => 'All ' + model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:manufacturer)
      %th= model_class.human_attribute_name(:model)
      %th= model_class.human_attribute_name(:rent_price)
      %th= model_class.human_attribute_name(:state)
      %th= model_class.human_attribute_name(:created_at)
      %th= model_class.human_attribute_name(:image)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @cars.each do |car|
      %tr
        %td= car.id
        %td= link_to car.manufacturer, car_path(car)
        %td= car.model
        %td= car.rent_price
        %td= car.state
        %td= car.created_at.strftime('%m-%d-%Y')
        %td= image_tag car.image.url(:thumb)
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_car_path(car), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), car_path(car), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'
= link_to t('.new', :default => t("helpers.links.new")), new_car_path, :class => 'btn btn-primary'
